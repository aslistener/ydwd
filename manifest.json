{
  "manifest_version": 2,
  "name": "ydwd",
  "version": "2.1",
  "description": "Query words by youdao API",
  "icons": {
    "48": "icons/icon-48.png"
  },
  "permissions": [
    "contextMenus",
    "*://fanyi.youdao.com/*"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "popup.js",
        "content.js"
      ],
      "run_at": "document_start"
    }
  ],
  "commands": {
    "ydwd-translate": {
      "suggested_key": {
        "default": "Alt+W"
      },
      "description": "Translate the selected word"
    }
  }
}